<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ladyjordi"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/start"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/start"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/language_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/select_language"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/language_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:contentDescription="@string/language_es"
                android:src="@drawable/colombia"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/language_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:contentDescription="@string/language_ca"
                android:src="@drawable/catalunya"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
